<div class = "top" >
  <h2>スケジュール一覧</h2>
  <% if flash[:success]%>
    <p class = "success" ><%= flash[:success]%>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>スケジュール更新日時</th>
        <th>確認</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td>
            <% start_time = post.start_day %>
            <%= start_time.strftime("%Y年%m月%d日") %>
          </td>
          <td>
            <% end_time = post.end_day %>
            <%= end_time.strftime("%Y年%m月%d日") %>
          </td>
          <td>
            <% if post.all_day == "1" %>  
              ◯
            <% else %>
				    <% end %>
          </td>
          <td><%= post.updated_at.to_s(:datetime_jp) %></td>
          <td><%= link_to "確認", post ,class:"line" %></td>
          <td><%= link_to "編集", [:edit,post] ,class:"line" %></td>
          <td><%= link_to "削除", post, method: :delete, data: { confirm: "本当に削除しますか？"} ,class:"line"%></td>
        </tr>
      <% end %>
    </tbody>
  </table> 
</div>

<div>
  <ul>
    <li><%= link_to "スケジュール新規登録", [:new_post], class:"line" %></li>
  </ul>
</div>

<footer>
  <%= render "shared/footer-sum"%>
</footer>