<div class = "show" >
  <h2>スケジュール詳細</h2>

    <table class = "detail">
      <tr>
        <th>タイトル</th>
        <td><%= @post.title %></td>
      </tr>
      <tr>
        <th>開始日</th>
        <td>
          <% start_time = @post.start_day %>
          <%= start_time.strftime("%Y年%m月%d日")%>  
        </td>
      </tr>
      <tr>
        <th>投稿日時</th>
        <td><%= @post.updated_at.to_s(:datetime_jp)%></td>
      </tr>
      <tr>
        <th>終日</th>
        <td>
          <% if @post.all_day == "1" %>
          ◯
          <% else %>
          <% end %>
        </td>  
      </tr>

      <tr class = "detail_memo">
        <th>スケジュールメモ</th>
        <td><%= @post.memo %></td>
      </tr>
    </table>
</div>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", :posts ,class:"line" %></li>
    <li><%= link_to "スケジュールを編集する", [:edit_post] ,class:"line" %></li>
    <li><%= link_to "スケジュールを削除する", :post, method: :delete , data:{confirm: "本当に削除しますか？"} ,class:"line" %></li>
  </ul>
</div>

<footer>
  <%= render "shared/footer"%>
</footer>